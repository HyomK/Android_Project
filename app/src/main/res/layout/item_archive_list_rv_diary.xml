<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/archive_list_preview_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_bg_diary"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/archive_list_preview_contents_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:fontFamily="@font/handwriting_flower_smell"
            android:textSize="@dimen/diary_contents_preview_font"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/archive_list_preview_done_list_iv"/>


        <ImageView
            android:id="@+id/archive_list_preview_done_list_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/leaf3"
            app:layout_constraintEnd_toStartOf="@id/archive_list_preview_emotion_iv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/archive_list_preview_emotion_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/emotion6"
            app:layout_constraintEnd_toStartOf="@id/archive_list_preview_date_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/archive_list_preview_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1999.06.06"
            android:textColor="@color/black"
            android:fontFamily="@font/handwriting_flower_smell"
            android:textSize="@dimen/diary_contents_preview_font"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>