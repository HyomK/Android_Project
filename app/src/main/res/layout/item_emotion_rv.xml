<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_diary_emotion_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/emotion0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_diary_emotion_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동글이"
        android:fontFamily="@font/uhbee_queen_j"
        app:layout_constraintTop_toBottomOf="@id/item_diary_emotion_iv"
        app:layout_constraintStart_toStartOf="@id/item_diary_emotion_iv"
        app:layout_constraintEnd_toEndOf="@id/item_diary_emotion_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>