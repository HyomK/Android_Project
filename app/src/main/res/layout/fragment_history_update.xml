<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/history_update_iv"
        android:layout_width="140dp"
        android:layout_height="250dp"
        android:src="@drawable/alocasia_no_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commingsoon"
        android:textSize="14dp"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/history_update_iv"
        app:layout_constraintStart_toStartOf="@id/history_update_iv"
        app:layout_constraintEnd_toEndOf="@id/history_update_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>