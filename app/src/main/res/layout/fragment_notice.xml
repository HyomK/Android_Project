<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MailWrite_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MailReply_toolbar_layout"
        >

        <include
            android:id="@+id/MailReply_toolbar"
            layout="@layout/toolbar_layout"
          />
        <TextView
            android:id="@+id/nickname_done_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="완료"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_content_fontSize"
            android:layout_marginEnd="25dp"
            android:textStyle="bold"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/birth_till"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="130dp"
        android:layout_height="45dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconTint="@android:color/black"
        app:elevation="0dp"
        android:layout_marginTop="10dp"
        android:outlineProvider="none"
        app:endIconDrawable="@drawable/ic_dropdown"
        android:layout_marginStart="40dp"

        >
    <AutoCompleteTextView
        android:id="@+id/birth_list"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@null"
        android:dropDownWidth="wrap_content"
        android:ellipsize="end"
        android:inputType="none"
        android:maxLines="1"
        android:singleLine="true"
        android:text="카테고리 선택"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="140dp"
        android:background="@drawable/report_edit_bg"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/report_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:hint="건의 내용을 입력해 주세요"
            android:gravity="start"
            android:textSize="14dp"
            android:maxLength="200"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>