<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="18dp">

                <ImageView
                    android:id="@+id/item_history_detail_bg_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/history_repeat_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/item_history_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:paddingStart="35dp"
                    android:paddingEnd="35dp"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="안녕"
                    android:fontFamily="@font/notosanskr_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_history_detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="35dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanskr_regular"
                    app:layout_constraintTop_toBottomOf="@id/item_history_detail_content"
                    app:layout_constraintStart_toStartOf="@id/item_history_detail_content" />

                <TextView
                    android:id="@+id/item_history_detail_sender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="35dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="28dp"
                    android:fontFamily="@font/notosanskr_regular"
                    app:layout_constraintTop_toBottomOf="@id/item_history_detail_date"
                    app:layout_constraintStart_toStartOf="@id/item_history_detail_date"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
