<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg_received"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/item_history_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingStart="34dp"
            android:paddingEnd="34dp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_history_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="34dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular"
            app:layout_constraintTop_toBottomOf="@id/item_history_detail_content"
            app:layout_constraintStart_toStartOf="@id/item_history_detail_content" />

        <TextView
            android:id="@+id/item_history_detail_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="34dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/notosanskr_regular"
            app:layout_constraintTop_toBottomOf="@id/item_history_detail_date"
            app:layout_constraintStart_toStartOf="@id/item_history_detail_date"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>