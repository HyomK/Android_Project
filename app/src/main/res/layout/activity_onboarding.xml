<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/onboarding_nameText_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="109dp"
        android:fontFamily="@font/notosanskr_regular"
        android:text="이름을 알려주세요"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/onboarding_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       닉네임         "
        android:fontFamily="@font/notosanskr_regular"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_nameText_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/onboarding_agetext_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="109dp"
        android:fontFamily="@font/notosanskr_regular"
        android:text="이름을 알려주세요"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/onboarding_age_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       선택안함         "
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_agetext_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/onboarding_yeartext_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/notosanskr_regular"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="년생"
        app:layout_constraintStart_toEndOf="@id/onboarding_age_et"
        app:layout_constraintTop_toTopOf="@id/onboarding_age_et"
        app:layout_constraintBottom_toBottomOf="@id/onboarding_age_et"/>

    <CheckBox
        android:id="@+id/onboarding_age_cb"
        android:checked="false"
        android:button="@android:color/transparent"
        android:background="@drawable/onboarding_age_checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="97dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_age_et"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/onboarding_notage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이는 알려주고 싶지 않아요."
        android:fontFamily="@font/notosanskr_regular"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/onboarding_age_cb"
        app:layout_constraintStart_toEndOf="@id/onboarding_age_cb"
        app:layout_constraintBottom_toBottomOf="@id/onboarding_age_cb"/>

    <TextView
        android:id="@+id/onboarding_okay_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_regular"
        android:gravity="center"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_notage_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/onboarding_age_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>