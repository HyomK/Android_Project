<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="50dp"
    android:background="@drawable/onboarding_age_box"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/tutorial_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:background="@drawable/tutorial_image_box"
            android:src="@drawable/bg"/>

        <TextView
            android:id="@+id/tutorial_okay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/onboarding_okay_box"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center"
            android:letterSpacing="0.11"
            android:text="OKAY!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/tutorial_iv"
            app:layout_constraintEnd_toEndOf="@id/tutorial_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>