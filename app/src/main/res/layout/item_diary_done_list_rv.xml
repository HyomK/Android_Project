<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_diary_done_list_background_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/done_list"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/item_diary_done_list_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_diary_done_list_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/item_diary_done_list_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="@dimen/diary_doneList_font"
        android:fontFamily="@font/handwriting_flower_smell"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_diary_done_list_delete_iv"/>
    
    <ImageView
        android:id="@+id/item_diary_done_list_delete_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_done_list_delete"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>