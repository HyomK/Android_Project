<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomDialogBtn" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosanskr_bold</item>
    </style>

    <style name="NotoSansTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>
    <style name="NotoSansButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>
    <style name="NotoSansEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>
    <style name="NotoSansRadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>
    <style name="NotoSansCheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>

    <style name="settingListStyle" parent="android:Widget.TextView">
        <item name="android:textSize"> @dimen/setting_content_fontSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="detailTextStyle">
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AgeDropMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <item name="endIconDrawable">@drawable/ic_dropdown</item>
    </style>

    <!--Archive Date Picker style-->
    <style name="ArchiveDatePickerStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/customDatePickerStyle</item>
    </style>
    <style name="customDatePickerStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/archive_date_picker_dialog_style</item>
    </style>

    <style name="tabTextSizeBold" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="EditTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/green</item>
        <item name="android:textSelectHandle">@color/green</item>
        <item name="android:textColorHighlight">@color/green</item>
        <item name="backgroundTint">@color/black</item>
        <item name ="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Custom Toolbar Popup style-->
    <style name="ToolbarOptionMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:dropDownHorizontalOffset">10dp</item>
        <item name="android:dropDownVerticalOffset">10dp</item>
        <item name="android:popupBackground">@drawable/custom_drop_down_style</item>
    </style>
