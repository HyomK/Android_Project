<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BTOS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>


        <!--popup -->

        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App.Subtitle1</item>
        <item name="popupMenuBackground">@drawable/mail_popup_bg</item>

    </style>

        <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
            <item name="fontFamily">@font/notosanskr_regular</item>
            <item name="android:fontFamily">@font/notosanskr_regular</item>
            <item name="android:textColor">@color/black</item>
        </style>

    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/mail_popup_bg</item>
    </style>
    <style name="testing" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="PopupCustom" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:bottomLeftRadius">12dp</item>
        <item name="android:bottomRightRadius">12dp</item>
        <item name="background">@drawable/mail_popup_bg </item>
    </style>


</resources>